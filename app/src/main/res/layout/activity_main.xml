<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="96dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp" android:background="@color/colorPrimary"
                android:textSize="32dp" android:dividerPadding="0dp" android:drawingCacheQuality="auto"
                android:paddingHorizontal="0dp">
            <Button
                    android:text="+"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/plus" android:layout_weight="1"
                    android:textSize="32dp" android:padding="0dp" android:layout_margin="0dp"/>
            <Button
                    android:text="-"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/minus" android:layout_weight="1"
                    android:textSize="32dp" android:padding="0dp" android:layout_margin="0dp"/>
            <Button
                    android:text="*"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/star" android:layout_weight="1"
                    android:textSize="32dp" android:padding="0dp" android:layout_margin="0dp"/>
            <Button
                    android:text="/"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/division" android:layout_weight="1"
                    android:textSize="32dp" android:padding="0dp" android:layout_margin="0dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp" android:background="@color/colorPrimary"
                android:textSize="32dp" android:dividerPadding="0dp" android:drawingCacheQuality="auto"
                android:paddingHorizontal="0dp">
            <Button
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/seven" android:layout_weight="1"
                    android:textSize="32dp" android:padding="0dp" android:layout_margin="0dp"
                    android:background="@android:color/holo_blue_dark"/>
            <Button
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/eight" android:layout_weight="1"
                    android:textSize="32dp" android:padding="0dp" android:layout_margin="0dp"
                    android:background="@android:color/holo_blue_dark"/>
            <Button
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/nine" android:layout_weight="1"
                    android:textSize="32dp" android:padding="0dp" android:layout_margin="0dp"
                    android:background="@android:color/holo_blue_dark"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp" android:background="@color/colorPrimary"
                android:textSize="32dp" android:dividerPadding="0dp" android:drawingCacheQuality="auto"
                android:paddingHorizontal="0dp">
            <Button
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/four" android:layout_weight="1"
                    android:textSize="32dp" android:padding="0dp" android:layout_margin="0dp"
                    android:background="@android:color/holo_blue_dark"/>
            <Button
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/five" android:layout_weight="1"
                    android:textSize="32dp" android:padding="0dp" android:layout_margin="0dp"
                    android:background="@android:color/holo_blue_dark"/>
            <Button
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/six" android:layout_weight="1"
                    android:textSize="32dp" android:padding="0dp" android:layout_margin="0dp"
                    android:background="@android:color/holo_blue_dark"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp" android:background="@color/colorPrimary"
                android:textSize="32dp" android:dividerPadding="0dp" android:drawingCacheQuality="auto"
                android:paddingHorizontal="0dp">
            <Button
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/one" android:layout_weight="1"
                    android:textSize="32dp" android:padding="0dp" android:layout_margin="0dp"
                    android:background="@android:color/holo_blue_dark"/>
            <Button
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/two" android:layout_weight="1"
                    android:textSize="32dp" android:padding="0dp" android:layout_margin="0dp"
                    android:background="@android:color/holo_blue_dark"/>
            <Button
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/three" android:layout_weight="1"
                    android:textSize="32dp" android:padding="0dp" android:layout_margin="0dp"
                    android:background="@android:color/holo_blue_dark"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp" android:background="@color/colorPrimary"
                android:textSize="32dp" android:dividerPadding="0dp" android:drawingCacheQuality="auto"
                android:paddingHorizontal="0dp">
            <Button
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/zero" android:layout_weight="1"
                    android:textSize="32dp" android:padding="0dp" android:layout_margin="0dp"
                    android:background="@android:color/holo_blue_dark"/>
            <Button
                    android:text="."
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/dot" android:layout_weight="1"
                    android:textSize="32dp" android:padding="0dp" android:layout_margin="0dp"
                    android:background="@android:color/holo_blue_dark"/>
            <Button
                    android:text="AC"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/ac" android:layout_weight="1"
                    android:textSize="32dp" android:padding="0dp" android:layout_margin="0dp"
                    android:background="@android:color/holo_blue_dark"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp" android:background="@color/colorPrimary"
                android:textSize="32dp" android:dividerPadding="0dp" android:drawingCacheQuality="auto"
                android:paddingHorizontal="0dp">
            <Button
                    android:text="="
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" android:id="@+id/equals" android:layout_weight="1"
                    android:textSize="46sp" android:padding="0dp" android:layout_margin="0dp"
                    android:background="@android:color/holo_orange_dark"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp" tools:layout_editor_absoluteX="8dp" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/linearLayout"
    >
        <TextView
                android:text="0"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/screen" android:layout_weight="1"
                android:textSize="80sp" android:textAlignment="textEnd" android:background="@android:color/black"
                android:textColor="@android:color/white"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>